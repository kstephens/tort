#!/bin/sh
srcs="$(ls src/*.c include/tort/*.h 2>/dev/null)"
# ${CC} ${CPPFLAGS} -E -o - ${srcs} | tr ";}" "\n" | less #
set -e # x
(
    cat "$1.begin"
    cat <<EOF
/* Sources:
$srcs
*/
EOF
    for f in $srcs
    do
      echo "  $f" 1>&2
      (
	# set -x;
	${CC} ${CPPFLAGS} -Iboot/include -E -o - "${f}"
      ) || :
    done |
    tr ";}" "\n" | 
    perl -ne '
if ( ! /^\s*static\b/ && /^\s*[a-zA-Z0-9_]+?.*?\s+(_tort_(m|M)_([a-zA-Z0-9_]+?)__([a-zA-Z0-9_]+))\s*[(].*?[)]\s*(;|$)/ ) { 
  print "tort_d_m($2,$3,$4,$1)\n";
}
' - /dev/null | 
    sort -u # | tee /dev/tty
    cat "$1.end"
) > "$2"

