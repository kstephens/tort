#!/bin/sh
set -e # x
(
    cat "$1.begin"
    srcs="$(ls src/*.c include/tort/fixnum.h 2>&1)"
    cat <<EOF
/* Sources:
$srcs
*/
EOF
    for f in $srcs
    do
      ${CC} ${CPPFLAGS} -E -o - "${f}" || :
    done |
    tr ";}" "\n" | 
    perl -ne 'print "extern ", $1, ";\n" if ( ! /^\s*(static|extern|return)\b/ && ! /TORT_NO_INTERNAL/ && /^\s*([a-z0-9_\*]+?\s+_tort_[a-zA-Z0-9_]+\s*[(][^)]+[)])\s*(\{\s+|;\s*$|$)/i ); ' |
    sort -u
    cat "$1.end"
) > "$2"

